<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.tvguide.cerebrotv.uk.2017" name="Cerebro TV Guide UK" version="2.0.25" provider-name="Cerebros">
	<requires>
		<import addon="xbmc.python" version="2.19.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
        <import addon="script.module.requests" />
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
            <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="be">Cerebro TV Guide UK allows you to combine some of your favourite live TV plugins for use with a fully working EPG</summary>
		<disclaimer lang="en">FTV Guide is based on the original TV Guide addon by twinther.</disclaimer>
		<assets>
          <icon>resources/icon.png</icon>
          <fanart>resources/fanart.jpg</fanart>
        </assets>
	</extension>
</addon>
